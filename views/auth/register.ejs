<section class="mo-content">
    <div class="row">
        <div class="large-8 medium-8 columns mo-animate animated fadeInDown" data-animate="fadeInDown" style="">
            <h3>New Client Registration</h3>
            <form class="mo-animate animated fadeInLeft comment-form" data-animate="fadeInLeft" action="/register" method="post">
                <div class="row">
                    <div class="large-12 columns">
                        <label>Email
                            <input type="text" name="email" class="form-control" placeholder="Enter Your Email" autofocus autocomplete="off" />
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="large-6 columns">
                        <label>Password
                            <input type="password" name="password" class="form-control" placeholder="Enter password" />
                        </label>
                    </div>
                    <div class="large-6 columns">
                        <label>Confirm Password
                            <input type="password" name="password2" class="form-control" placeholder="Confirm Password" />
                        </label>
                    </div>

                </div>
                <div class="row">
                    <div class="large-6 columns">
                        <label>First Name
                            <input type="text" name="firstname" class="form-control" placeholder="Firstname" />
                        </label>
                    </div>
                    <div class="large-6 columns">
                        <label>Last Name
                            <input type="text" name="lastname" class="form-control" placeholder="Lastname" />
                        </label>
                    </div>

                </div>
                <div class="row">
                    <div class="large-12 columns">
                        <label>Country
                            <select name="country">
                                <% _.each(countries, function (country) { %>
                                <option value="<%= country.name %>"><%= country.name %></option>
                                    <% }) %>
                            </select>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="Sign in" class="button blue radius" data-animate="bounceIn" id="buttonsend" />
                </div>

            </form>
        </div>
    </div>
</section>

