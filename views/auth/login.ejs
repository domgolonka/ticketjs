<div class="container">
    <div class="row login-container animated fadeInUp">
        <div class="col-md-7 col-md-offset-2 tiles white no-padding">
            <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
                <h2 class="normal">Please sign in or register an account with Seedmybox</h2>
                <% if (typeof flashMessages !== 'undefined' && flashMessages.length > 0) { %>
                 <!-- <div class="alert alert-block alert-error fade in">
                      <h4 class="alert-heading"><i class="icon-warning-sign"></i> Error!</h4> -->
                      <script>
                              jQuery(document).ready(function() {
                                var messages = <%- JSON.stringify(flashMessages) %>;
                                function makeMessage(text, type, options) {
                                  type = type || "success";
                                  options = options || {};

                                  var timeout = 6000;

                                  switch (type) {
                                    case "success":
                                      timeout = 3000;
                                      break;
                                  }
                                  String.prototype.nl2br = function() {
                                    return this.replace(/\n/g, "<br />");
                                  };
                                  // Create noty
                                  noty(jQuery.extend({}, {
                                    text: text.nl2br(),
                                    type: type,
                                    layout: "top",
                                    timeout: timeout
                                  }, options));
                                }
                                if (messages && typeof messages == "object") {
                                  // Iterate messages and make messages
                                  $.each(messages, function (i, message) {
                                    //console.log(message);
                                    makeMessage(message.message, message.type, message.options);
                                  });
                                }

                              });
                        </script>
                  <!-- </div> -->
                <% } %>
                <button type="button" class="btn btn-primary btn-cons" id="login_toggle">Login</button> or&nbsp;&nbsp;<button type="button" class="btn btn-info btn-cons" id="register_toggle"> Register an Account</button>
            </div>
            <div class="tiles grey p-t-20 p-b-20 text-black">
                <form id="frm_login" class="animated fadeIn" method="post" action="/login">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                        <div class="col-md-6 col-sm-6 ">
                            <input name="email" id="login_username" type="text"  class="form-control" placeholder="Email">
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input name="password" id="login_pass" type="password"  class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                        <div class="control-group  col-md-10">
                            <div class="checkbox checkbox check-success"> <a href="#">Trouble login in?</a>&nbsp;&nbsp;
                                <input type="checkbox" name="remember_me" id="checkbox1" value="1">
                                <label for="checkbox1">Keep me reminded </label>
                            </div>
                        </div>
                    </div>
                    <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
                        <button type="submit" class="btn btn-cons btn-success">  <span class="bold">Login</span></button>
                     </div>
                </form>
                <%- partial('../partials/register') %>
            </div>
        </div>
    </div>
</div>
