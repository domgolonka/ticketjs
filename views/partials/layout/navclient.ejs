<% if (currentUser.admin && typeof projectId !== 'undefined' && typeof sprintId !== 'undefined') { %>
<li class="dropdown">
    <a href="javascript: void(0);" class="dropdown-toggle"
       data-toggle="dropdown"
       data-hover="dropdown"
       data-delay="50"
            >
        Settings
        <b class="caret"></b>
    </a>

    <ul class="dropdown-menu">
        <li>
            <a href="javascript: void(0);"
               data-bind="click: $root.usersOpen"
                    >
                <i class="fa fa-user"></i>
                Users
            </a>
        </li>
    </ul>
</li>
<% } %>

<li class="navbar-icon navbar-user tooltipTitle" title="Edit your profile settings"
    data-qtip-options='{ "position": { "at": "bottom center", "my": "top right" } }'
        >
    <a href="javascript: void(0);"
       data-user-id="<%= currentUser.id %>"
            >
        <img src="<%= currentUser.gravatarImage() %>" />
        <span><%= currentUser.username %></span>
    </a>
</li>

<li id="functionHelp" class="navbar-icon tooltipTitle" title="Show help"
    data-qtip-options='{ "position": { "at": "bottom center", "my": "top right" } }'
        >
    <a href="javascript: void(0);">
        <i class="fa fa-question-circle"></i>
    </a>
</li>

<li class="navbar-icon tooltipTitle" title="Sign out"
    data-qtip-options='{ "position": { "at": "bottom center", "my": "top right" } }'
        >
    <a href="/logout">
        <i class="fa fa-sign-out text-danger"></i>
    </a>
</li>